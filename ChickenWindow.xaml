<Window x:Class="GameArcadia.ChickenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChickenWindow" Height="228" Width="403">
    <DockPanel>
        <TextBlock Background="Red" DockPanel.Dock ="Top" FontSize ="36">
            ChickenWindow
        </TextBlock>
        <StackPanel DockPanel.Dock ="Left">
            <Expander IsExpanded ="True" Header ="Main Menu">
                <StackPanel>
                    <Button>New Game</Button>
                    <Button>Load Game</Button>
                    <Button>Save Game</Button>
                    <Button>Quit</Button>
                </StackPanel>
            </Expander>
        </StackPanel>
        <StackPanel Background ="White"/>
        <Button x:Name="Dice1" Content="1" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30" Background="{x:Null}"/>
        <Button x:Name="Dice2" Content="1" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30"/>
        <Button x:Name="Dice3" Content="1" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30"/>
        <Button x:Name="Dice4" Content="1" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30"/>
        <Button x:Name="Dice5" Content="1" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30"/>
        <Button x:Name="Dice6" Content="1" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30"/>

    </DockPanel>
</Window>