<Window x:Class="GameArcadia.ChickenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChickenWindow" Height="501" Width="388">
    <DockPanel>
        <TextBlock Background="Red" DockPanel.Dock ="Top" FontSize ="36">Chicken
        </TextBlock>
        <StackPanel DockPanel.Dock ="Left">
            <Expander IsExpanded ="True" Header ="Main Menu">
                <StackPanel>
                    <Button x:Name="NewGame" Click="NewGameClick">New Game</Button>
                    <Button>Load Game</Button>
                    <Button>Save Game</Button>
                    <Button>Quit</Button>
                </StackPanel>
            </Expander>
            <Expander IsExpanded ="True" Header ="Main Menu">
                <StackPanel>
                    <Button x:Name="Roll" Click="RollTheDice">Roll!</Button>
                    <Button>Load Game</Button>
                    <Button>Save Game</Button>
                    <Button>Quit</Button>
                </StackPanel>
            </Expander>
        </StackPanel>
        <StackPanel Background ="White"/>
        <Button x:Name="Dice1" Content="0" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30" Click="Click1"/>
        <Button x:Name="Dice2" Content="0" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30" Click="Click2"/>
        <Button x:Name="Dice3" Content="0" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30" Click="Click3"/>
        <Button x:Name="Dice4" Content="0" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30" Click="Click4"/>
        <Button x:Name="Dice5" Content="0" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30" Click="Click5"/>
        <Button x:Name="Dice6" Content="0" Height="30" Margin="0,25,0,0" MinWidth="30" MinHeight="30" HorizontalContentAlignment="Center" Width="30" Click="Click6"/>

    </DockPanel>
</Window>