<Window x:Class="GameArcadia.DotWarsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DotWarsWindow" Height="418.843" Width="456.716">
        <DockPanel>
            <TextBlock Background="Red" DockPanel.Dock ="Top" FontSize ="36">DotWars
            </TextBlock>
            <StackPanel DockPanel.Dock ="Left">
                <Expander IsExpanded ="True" Header ="Main Menu" HorizontalAlignment="Left">
                    <StackPanel>
                        <Button Click="NewGameClick">New Game</Button>
                        <Button>Load Game</Button>
                        <Button>Save Game</Button>
                        <Button>Quit</Button>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </DockPanel>
</Window>
