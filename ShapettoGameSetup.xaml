<Window x:Class="GameArcadia.ShapettoGameSetup"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="ShapettoGameSetup" Height="300" Width="300">
	<Grid>
		<Label Content="How many players would you like in the game?" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
		<StackPanel Margin="28,36,191,167">
		    <RadioButton GroupName ="NumberOfPlayers" Content="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton GroupName ="NumberOfPlayers" Content="3" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton GroupName ="NumberOfPlayers" Content="4" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton GroupName ="NumberOfPlayers" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </StackPanel>
        <Button Content="Start Shapetto" HorizontalAlignment="Left" Margin="50,222,0,0" VerticalAlignment="Top" Width="90"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="145,222,0,0" VerticalAlignment="Top" Width="90"/>
    </Grid>
</Window>
